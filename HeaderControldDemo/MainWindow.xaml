<Window x:Class="HeaderControldDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeaderControldDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Margin="20">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="12360.jpg" Width="50" Height="50"></Image>
                    <TextBlock Text="Options" Margin="10,0,0,0"></TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <CheckBox>Sugar</CheckBox>
                <CheckBox>Tea</CheckBox>
                <CheckBox>Coffee</CheckBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
