<Window x:Class="DynamicFontsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicFontsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Width="400" 
                   Height="100" 
                   Text="Hello Windows Presentation Freamwork!" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center"
                   Foreground="Beige"
                   Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}"
                   FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}"
                   FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}"
                   >
        </TextBlock>
    </Grid>
</Window>
