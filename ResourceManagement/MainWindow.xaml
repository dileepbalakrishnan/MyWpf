<Window x:Class="ResourceManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <LinearGradientBrush EndPoint="1,0" x:Key="brush1">
            <GradientStop Color="Yellow" Offset="0" />
            <GradientStop Color="Orange" Offset=".5" />
            <GradientStop Color="Blue" Offset=".7" />
            <GradientStop Color="DarkRed" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource brush1}">
        
    </Grid>
</Window>
